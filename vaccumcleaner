def vacuum_world():
    # Initializing goal_state
    # 0 indicates Clean and 1 indicates Dirty
    goal_state = {'A': '0', 'B': '0'}
    cost = 0
    
    # User input for the initial state of the vacuum
    location_input = input("Enter Location of Vacuum (A or B): ")  # User input for location
    status_input = input(f"Enter status of {location_input} (1 for Dirty, 0 for Clean): ")  # Status of location
    status_input_complement = input("Enter status of the other room (1 for Dirty, 0 for Clean): ")  # Complement status
    
    print("Initial Location Condition: " + str(goal_state))
    
    if location_input == 'A':
        # Location A is the starting point for the vacuum
        print("Vacuum is placed in Location A.")
        
        if status_input == '1':  # Location A is dirty
            print("Location A is Dirty.")
            # Suck the dirt and mark it as clean
            goal_state['A'] = '0'
            cost += 1  # Cost for sucking
            print("Cost for CLEANING A: " + str(cost))
            print("Location A has been cleaned.")
            
            if status_input_complement == '1':  # If B is dirty
                print("Location B is Dirty.")
                print("Moving right to Location B.")
                cost += 1  # Cost for moving right
                print("Cost for moving RIGHT: " + str(cost))
                # Suck the dirt and mark it as clean
                goal_state['B'] = '0'
                cost += 1  # Cost for sucking
                print("Cost for SUCKING: " + str(cost))
                print("Location B has been cleaned.")
            else:
                print("Location B is already clean. No action needed.")
        else:
            print("Location A is already clean.")
            
            if status_input_complement == '1':  # If B is dirty
                print("Location B is Dirty.")
                print("Moving right to Location B.")
                cost += 1  # Cost for moving right
                print("Cost for moving RIGHT: " + str(cost))
                # Suck the dirt and mark it as clean
                goal_state['B'] = '0'
                cost += 1  # Cost for sucking
                print("Cost for SUCKING: " + str(cost))
                print("Location B has been cleaned.")
            else:
                print("Location B is already clean. No action needed.")
    
    elif location_input == 'B':
        # Vacuum is placed in Location B
        print("Vacuum is placed in Location B.")
        
        if status_input == '1':  # Location B is dirty
            print("Location B is Dirty.")
            # Suck the dirt and mark it as clean
            goal_state['B'] = '0'
            cost += 1  # Cost for sucking
            print("Cost for CLEANING B: " + str(cost))
            print("Location B has been cleaned.")
            
            if status_input_complement == '1':  # If A is dirty
                print("Location A is Dirty.")
                print("Moving left to Location A.")
                cost += 1  # Cost for moving left
                print("Cost for moving LEFT: " + str(cost))
                # Suck the dirt and mark it as clean
                goal_state['A'] = '0'
                cost += 1  # Cost for sucking
                print("Cost for SUCKING: " + str(cost))
                print("Location A has been cleaned.")
            else:
                print("Location A is already clean. No action needed.")
        else:
            print("Location B is already clean.")
            
            if status_input_complement == '1':  # If A is dirty
                print("Location A is Dirty.")
                print("Moving left to Location A.")
                cost += 1  # Cost for moving left
                print("Cost for moving LEFT: " + str(cost))
                # Suck the dirt and mark it as clean
                goal_state['A'] = '0'
                cost += 1  # Cost for sucking
                print("Cost for SUCKING: " + str(cost))
                print("Location A has been cleaned.")
            else:
                print("Location A is already clean. No action needed.")
    
    # Done cleaning
    print("\nGOAL STATE: ")
    print(goal_state)
    print("Performance Measurement (Cost): " + str(cost))

# Run the vacuum world simulation
vacuum_world()
